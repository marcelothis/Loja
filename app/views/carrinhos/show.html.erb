<% if notice %>
	<p id= "notice"><%= notice %></p>
<% end %>
<h1>Carrinho</h1>

<table class="table">
  <thead>
    <tr>
      <th>Imagem</th>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Preco und</th>
	  <th>Quantidade</th>
	  <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<% @carrinho.linha_items.each do |item| %>
		<tr>
			<td><%= image_tag item.product.avatar.url(:thumb) %></td>
			<td><%= item.product.titulo %></td>
			<td><%= item.product.descricao %></td>
			<td><%= number_to_currency (item.product.preco) %></td>
			<td><input name="linha_item[quantidade]" value=<%= item.quantidade %> type="int" maxlenght="10"/></td>
			<td><%= number_to_currency (item.item_total) %></td>
			<td><%= button_to 'Atualizar', @item, method: :update%></td>
		</tr>
	<% end %>
  </tbody>
</table>
<li>TOTAL DA COMPRA: <%=number_to_currency(@carrinho.preco_total) %></li>
